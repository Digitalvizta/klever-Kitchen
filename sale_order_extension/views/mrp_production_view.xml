<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mrp_production_form_inherit_add_field" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit.add.field</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <!-- Insert your custom field right after the existing user_id field -->
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="production_date"/>
                </xpath>
                 <xpath expr="//field[@name='user_id']" position="after">
                    <field name="production_date"/>
                </xpath>

            </field>
        </record>

        <record id="mrp_bom_form_inherit_add_field" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit.add.field</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='type']" position="after">
                    <field name="main_bom" help="Tick this box to mark this Bill of Materials as the main one for this product."/>

                </xpath>

            </field>
        </record>

    </data>
</odoo>