<odoo>
    <record id="dvz_res_partner_form_pricelist_button" model="ir.ui.view">
        <field name="name">res.partner.form.dvz.pricelist.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="open_supplierinfos"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck">
                    <field name="supplierinfo_count" widget="statinfo" string="Supplier Info"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
