<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="account_check_action_form_view">
            <field name="name">account.check.action.wizard.form</field>
            <field name="model">account.check.action</field>
            <field name="arch" type="xml">
                <form string="Check Action">
                    <field name="action_type" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <group>
                        <field name="date"/>
                        <field name="journal_id"/>
<!--                               attrs="{'invisible':[('action_type','not in',('deposit','under_collection'))],'required':[('action_type','in',('deposit','under_collection'))]}"/>-->
                        <field name="account_id"
                              />
<!--                               attrs="{'invisible':[('action_type','!=','deposit')],'required':[('action_type','=','deposit')]}"/>-->
                        <field name="companycheck" invisible="1"/>
                        <field name="debit_journal_id" />
<!--                        <field name="debit_journal_id" invisible='companycheck' '=',False/>-->
                    </group>
                    <footer>
                        <button string="Confirm" name="action_confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_check_debit" model="ir.actions.act_window">
            <field name="name">Check Debit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.check.action</field>
            <field name="binding_model_id" ref="account_check.model_account_check_action"/>
            <field name="view_mode">form</field>
            <field name="context">{'default_action_type':'debit'}</field>
            <field name="view_id" ref="account_check.account_check_action_form_view"/>
            <field name="binding_view_types">list</field>
            <field name="target">new</field>
        </record>

