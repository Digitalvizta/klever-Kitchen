<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_account_payment_form_inherited1" model="ir.ui.view">
            <field name="name">account.payment.inherit1.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="inside">
                    <notebook>
                        <page string="Checks"
                              attrs="{'invisible':['|',('payment_type','=','inbound'),('payment_subtype','!=','issue_check')]}">

                            <field name="issued_check_ids"/>

                        </page>

                        <page string="Checks"
                              attrs="{'invisible':['|',('payment_type','=','inbound'),('payment_subtype','!=','third_check')]}">

                            <field name="delivered_third_check_ids" widget="many2many"
                                   domain="[('type','=','third_check'),('state', '=', 'holding'),('third_handed_voucher_id', '=', False),('journal_id', '=', journal_id)]"
                                   context="{'default_type':'third_check'}"/>
                        </page>

                        <page string="Checks"
                              attrs="{'invisible':['|',('payment_subtype','!=','third_check'),('payment_type','!=','inbound')]}">

                            <field name="received_third_check_ids"/>
                        </page>

                    </notebook>
                </xpath>
                <field name="partner_id" position="after">
                    <field name="payment_subtype" invisible='1'/>
                    <field name="dummy_journal_id" invisible="1"/>
                    <field name="paylines_amount" invisible="1"/>
                </field>

                <field name="journal_id" position="before">
                    <field name="amount_readonly" string="Total Amount"/>
                </field>
                <!-- TODO check if we want to use this in some cases, to set a value -->
                <xpath expr="//label[@for='amount']" position="attributes">
                    <attribute name="style">color: white;</attribute>
                </xpath>

                <xpath expr="//div[@name='amount_div']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <field name="journal_id" position="after">
                    <field name="checks_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible':[('payment_subtype','=', False)]}"/>
                        <field name="net_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible':[('payment_subtype','!=', False)]}" readonly="False"/>
                        <field name="currency_id" options="{'no_create': True, 'no_open': True}" required="1"
                               attrs="{'readonly': [('state', '!=', 'draft')],'invisible':[('payment_subtype','!=', False)]}" groups="base.group_multi_currency"/>

                </field>
            </field>
        </record>


    </data>
</openerp>
