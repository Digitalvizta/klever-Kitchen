<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Check List View -->
        <record model="ir.ui.view" id="view_account_check_tree">
            <field name="name">account.check.list</field>
            <field name="model">account.check</field>
            <field name="arch" type="xml">
                <list decoration-info="state == 'draft'" decoration-danger="state == 'rejected'"
                      decoration-muted="state == 'cancel'" create="false" string="Checks">
                    <field name="checkbook_id" invisible="context.get('payment_subtype') != 'issue_check'"/>
<!--                    <field name="checkbook_id" invisible="payment_subtype != 'issue_check'"/>-->
                    <field name="journal_id"/>
                    <field name="name" string="Number"/>
                    <field name="issue_date"/>
                    <field name="payment_date"/>
                    <field name="source_partner_id" string="Source Partner"
                           invisible="context.get('default_type') != 'third_check'"/>
                    <field name="destiny_partner_id" string="Destiny Partner"/>
                    <field name="bank_id" invisible="context.get('default_type') != 'third_check'"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                    <field name="owner_name" invisible="context.get('default_type') != 'third_check'"/>
                </list>
            </field>
        </record>

        <!-- Check Create List View -->
        <record model="ir.ui.view" id="view_account_check_create_tree">
            <field name="name">account.check.create.list</field>
            <field name="model">account.check</field>
            <field name="arch" type="xml">
                <list decoration-info="state == 'draft'" decoration-danger="state == 'rejected'"
                      decoration-muted="state == 'cancel'" string="Checks">
                    <field name="checkbook_id"  invisible="type != 'issue_check'"/>
<!--                    <field name="checkbook_id" invisible="context.get('default_type') != 'issue_check'"/>-->
                    <field name="journal_id"/>
                    <field name="name" string="Number"/>
                    <field name="issue_date"/>
                    <field name="payment_date"/>
                    <field name="source_partner_id" string="Source Partner"
                           invisible="context.get('default_type') != 'third_check'"/>
                    <field name="bank_id" invisible="context.get('default_type') != 'third_check'"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Check Form View -->
        <record model="ir.ui.view" id="view_account_check_form">
            <field name="name">account.check.form</field>
            <field name="model">account.check</field>
            <field name="arch" type="xml">
                <form string="Checks" create="false">
                    <field name="type" invisible="1"/>
                    <field name="issue_check_subtype" invisible="1"/>
                    <field name="journal_id" invisible="1"/>
                    <header>
                        <button name="%(action_check_deposit)d" type="action" string="Deposited" class="oe_highlight" invisible="state != 'undercollection'"/>
                        <button name="%(action_check_under_collection)d" type="action" string="Under Collection"
                                class="oe_highlight" invisible="state != 'holding'"/>
                        <button name="%(action_account_change_check)d"
                                type="action"
                                string="Change"
                                class="oe_highlight"
                                invisible="(type != 'third_check' and state != 'holding') and (type != 'issue_check' and state != 'handed')"/>
                        <button name="%(action_check_debit)d" context="{'compcheck': company_check}" type="action"
                                string="Debit" class="oe_highlight" invisible="state != 'handed'"/>
                        <button name="%(action_check_rejected)d" type="action" string="Reject" invisible="state != 'undercollection'"/>

                        <button name="%(action_check_return)d" type="action" string="Return"
                                context="{'default_state':state,'default_type':type}" invisible="state != 'holding'"/>
                        <button name="action_cancel_debit" type="object" string="Cancel Debit" invisible="state != 'debited'"
                                context="{'default_state':state,'default_type':type}"/>
                        <button name="action_cancel_deposit" type="object" string="Cancel Deposit"
                                context="{'default_state':state,'default_type':type}" invisible="state != 'deposited'"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <h1 invisible="not name">
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="checkbook_id"
                                       widget="selection"
                                       domain="[('journal_id','=',journal_id),('state','=','active')]"
                                       invisible="type != 'issue_check'"
                                       readonly="state != 'draft'"/>
                                <field name="bank_id"
                                       invisible="type != 'third_check'"/>
                                <field name="number"/>
                                <field name="amount" widget="monetary" options="{'currency_field':'currency_id'}"/>
                                <field name="currency_id" invisible="1" required="1"
                                       options="{'no_create':True,'no_open':True}"
                                       readonly="state != 'draft'" groups="base.group_multi_currency"/>
                                <field name="company_currency_amount" invisible="company_currency_amount == 0"/>
                            </group>
                            <group>
                                <field name="owner_name" invisible="type != 'third_check'"/>
                                <field name="vat" invisible="type != 'third_check'"/>
                                <field name="issue_date"/>
                                <field name="payment_date" required="0"/>
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                                <field name="company_check" invisible="type != 'issue_check'"
                                       readonly="state != 'draft'"/>
                            </group>
                        </group>

                        <group string="Related Documents">
                            <group>
                                <field name="voucher_id" invisible="('from_voucher' in context)"
                                       required="not ('from_voucher' in context)"/>
                                <field name="third_handed_voucher_id"
                                       invisible="('from_voucher' in context) or third_handed_voucher_id == False"/>
                                <field name="source_partner_id"
                                       invisible="('from_voucher' in context) or source_partner_id == False"/>
                                <field name="destiny_partner_id"
                                       invisible="('from_voucher' in context) or destiny_partner_id == False"/>
                            </group>
                            <group>
                                <field name="replacing_check_id" invisible="replacing_check_id == False"/>
                                <field name="debit_account_move_id" invisible="debit_account_move_id == False"/>
                                <field name="deposit_account_move_id" invisible="deposit_account_move_id == False"/>
                                <field name="under_collect_move_id" invisible="under_collect_move_id == False"/>
                                <field name="customer_reject_debit_note_id"
                                       invisible="customer_reject_debit_note_id == False"/>
                                <field name="expense_account_move_id" invisible="expense_account_move_id == False"/>
                                <field name="supplier_reject_debit_note_id"
                                       invisible="supplier_reject_debit_note_id == False"/>
                                <field name="return_account_move_id" invisible="return_account_move_id == False"/>
                                <field name="long_term_check" invisible="1" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>

                    <!--                  <div class="oe_chatter">-->
                    <!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
                    <!--                    <field name="message_ids" widget="mail_thread"/>-->
                    <!--                  </div>-->
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="view_checks_search">
            <field name="name">check.search</field>
            <field name="model">account.check</field>
            <field name="arch" type="xml">
                <search string="Checks">
                    <field name="number"/>
                    <field name="source_partner_id"/>
                    <field name="destiny_partner_id"/>
                    <field name="journal_id"/>
                    <field name="voucher_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                    <field name="owner_name"/>
                    <field name="vat"/>
                    <group expand="0" string="Group By">
                        <filter name="issue_date" string="Issue Date" context="{'group_by':'issue_date'}"/>
                        <filter name="payment_date" string="Payment Date" context="{'group_by':'payment_date'}"/>
                        <filter name="journal_id" string="Journal" context="{'group_by':'journal_id'}"/>
                        <filter name="state_id" string="State" context="{'group_by':'state'}"/>
                        <filter name="src_partner_id" string="Source Partner"
                                context="{'group_by':'source_partner_id'}"/>
                        <filter name="dest_partner_id" string="Destiny Partner"
                                context="{'group_by':'destiny_partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Calendar View -->
        <record model="ir.ui.view" id="view_account_check_calendar">
            <field name="name">account.check.calendar</field>
            <field name="model">account.check</field>
            <field name="arch" type="xml">
                <calendar string="Checks" date_start="payment_date" color="destiny_partner_id">
                    <field name="amount"/>
                </calendar>
            </field>
        </record>


        <!-- Third Checks Action & Menu -->
        <record model="ir.actions.act_window" id="action_third_check">
            <field name="name">Third Checks</field>
            <field name="res_model">account.check</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="view_id" ref="view_account_check_tree"/>
            <field name="domain">[('type','=','third_check')]</field>
            <field name="context">{'default_type':'third_check','menu_third_checks':True}</field>
        </record>


        <!-- Issued Checks Action & Menu -->
        <record model="ir.actions.act_window" id="action_issue_check">
            <field name="name">Issue Checks</field>
            <field name="res_model">account.check</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="view_id" ref="view_account_check_tree"/>
            <field name="domain">[('type','=','issue_check')]</field>
            <field name="context">{'default_type':'issue_check','menu_issue_checks':True}</field>
        </record>

        <menuitem id="menu_issue_check" name="Issue Checks" parent="account.menu_finance_entries"
                  action="action_issue_check" sequence="40"/>
        <menuitem id="menu_third_check" name="Third Checks" parent="account.menu_finance_entries"
                  action="action_third_check" sequence="30"/>

    </data>
</odoo>
