<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_check_journal_form" model="ir.ui.view">
            <field name="name">account_check.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/sheet/notebook" position="inside">
                        <page string="Checkbooks" attrs="{'invisible':[('payment_subtype','not in', ('issue_check'))]}">
                            <field name="checkbook_ids" attrs="{'required':[('payment_subtype', '=', 'issue_check')]}"
                                   context="{'default_company_id':company_id}"/>
                        </page>
                    </xpath>

                    <xpath expr="//field[@name='type']" position="after">
                        <field name="payment_subtype" attrs="{'invisible':[('type','not in', ('cash','bank'))]}"/>
                    </xpath>
                    <xpath expr="//field[@name='loss_account_id']" position="after">
                        <field name="under_collection_acc_id"
                               attrs="{'required':[('payment_subtype', '=', 'third_check')]
                               ,'invisible' :[('payment_subtype', '!=', 'third_check')] }"/>
                        <field name="handed_acc_id"
                               attrs="{'required':[('payment_subtype', '=', 'issue_check')],
                               'invisible' :[('payment_subtype', '!=', 'issue_check')]}"/>
                        <field name ="bank_under_collection_acc_id" />
                        <field name="long_term_account" />
                    </xpath>
                </data>
            </field>
        </record>



    </data>
</openerp>
