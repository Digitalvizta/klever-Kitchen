<odoo>
    <record id="product_supplierinfo_form_inherit_product_name_ref" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.inherit.product.name.ref</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">

            <!-- Hide old field -->
            <xpath expr="//field[@name='product_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='product_name']" position="after">
                <field name="product_name_ref" domain="[('vendor_id', '=', partner_id)]"/>/>
            </xpath>
        </field>
    </record>
</odoo>
