<odoo>
    <!-- List (Tree) View -->
    <record id="view_vendor_product_list" model="ir.ui.view">
        <field name="name">vendor.product.list</field>
        <field name="model">vendor.product</field>
        <field name="arch" type="xml">
            <list string="Vendor Products" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="vendor_id" optional="show"/>
                <field name="product_name" optional="show"/>
                <field name="product_code" optional="show"/>
                <field name="date_start" optional="hide"/>
                <field name="date_end" optional="hide"/>
                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                <field name="min_qty" optional="hide"/>
                <field name="product_uom" groups="uom.group_uom" optional="hide"/>
                <field name="price" string="Price"/>
                <field name="discount" optional="hide"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="delay" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vendor_product_form" model="ir.ui.view">
        <field name="name">vendor.product.form</field>
        <field name="model">vendor.product</field>
        <field name="arch" type="xml">
            <form string="Vendor Product">
                <sheet>
                    <group>
                        <group>
                            <field name="vendor_id" required="1"/>
<!--                            <field name="partner_id"/>-->
                            <field name="product_name"/>
                            <field name="product_code"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pricing  Quantity">
                            <group>
                                <field name="min_qty"/>
                                <field name="product_uom" groups="uom.group_uom"/>
                                <field name="price"/>
                                <field name="discount"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                            </group>
                        </page>
                        <page string="Availability">
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="delay"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_vendor_product" model="ir.actions.act_window">
        <field name="name">Vendor Products</field>
        <field name="res_model">vendor.product</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create vendor-specific product records.
            </p>
        </field>
    </record>

    <!-- Menu Items (Under Purchase Module) -->
    <menuitem id="menu_vendor_product_root"
              name="Vendor Product"
              parent="purchase.menu_purchase_root"
              sequence="5"/>

    <menuitem id="menu_vendor_product_mapping"
              name="Vendor Product"
              parent="menu_vendor_product_root"
              action="action_vendor_product"
              sequence="2"/>
</odoo>
