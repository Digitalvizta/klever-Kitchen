<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dvz_partner_form_inherit_partner_type_management" model="ir.ui.view">
            <field name="name">res.partner.form.dvz.partner.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group" position="inside">
                    <group string="Partner Type">
                        <field name="is_employee"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="dvz_res_partner_search_view_management" model="ir.ui.view">
            <field name="name">res.partner.search.dvz.partner.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='type_company']" position="after">
                    <filter name="is_employee" string="Employees" domain="[('is_employee','=',True)]"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>