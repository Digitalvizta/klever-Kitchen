<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Product Template Form View -->
    <record id="view_product_template_form_inherit_portal_filter" model="ir.ui.view">
        <field name="name">product.template.form.inherit.portal.filter</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Insert field after the 'categ_id' (category) field, which always exists -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="allowed_customer_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <!-- Optional Tree/List View -->
    <record id="view_product_template_tree_inherit_portal_filter" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.portal.filter</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="allowed_customer_ids"/>
            </xpath>
        </field>
    </record>
</odoo>
