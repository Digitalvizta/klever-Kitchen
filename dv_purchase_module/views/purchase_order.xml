<odoo>
    <record id="view_order_form_inherit_vendor_domain" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.vendor.product.domain</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="attributes">
                <attribute name="domain">
                    [
                    ('purchase_ok', '=', True),
                    '|',
                    ('company_id', '=', False),
                    ('company_id', 'parent_of', parent.company_id),
                    ('seller_ids.partner_id', '=', parent.partner_id)
                    ]
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>