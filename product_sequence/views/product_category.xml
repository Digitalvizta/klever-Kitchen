<odoo>
    <record id="product_category_form_view" model="ir.ui.view">
        <field name="name">product.category.form - product_sequence</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <label for="code_prefix"/>
                <div>
                    <field
                            name="code_prefix"
                            style="padding-right: 1.0em"
                            class="oe_inline"
                    />
                    <field name="sequence_id" groups="base.group_no_one"/>
                </div>
            </field>
        </field>
    </record>

    <record id="view_product_form_inherit_default_code" model="ir.ui.view">
        <field name="name">product.template.form.inherit.default.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Insert after Category field -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="product_default_code"/>
            </xpath>
        </field>
    </record>

</odoo>
