<odoo>


    <!-- Action for Product Category Types -->
    <record id="action_product_category_type" model="ir.actions.act_window">
        <field name="name">Category Types</field>
        <field name="res_model">product.category.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_product_category_type_tree" model="ir.ui.view">
        <field name="name">product.category.type.tree</field>
        <field name="model">product.category.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View with chatter -->
    <record id="view_product_category_type_form" model="ir.ui.view">
        <field name="name">product.category.type.form</field>
        <field name="model">product.category.type</field>
        <field name="arch" type="xml">
            <form string="Product Category Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Menu under Products/Configuration -->
    <menuitem id="menu_product_category_type_root"
              name="Category Types"
              parent="stock.menu_stock_config_settings"
              sequence="20"
              action="action_product_category_type"/>
</odoo>
