<odoo>


    <!-- Action for Product Category Types -->
    <record id="action_product_main_category" model="ir.actions.act_window">
        <field name="name">Parent Category</field>
        <field name="res_model">product.parent.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_product_parent_category_tree" model="ir.ui.view">
        <field name="name">product.parent.category.tree</field>
        <field name="model">product.parent.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="product_category_type"/>
            </list>
        </field>
    </record>

    <!-- Form View with chatter -->
    <record id="view_product_parent_category_type_form" model="ir.ui.view">
        <field name="name">product.parent.category.form</field>
        <field name="model">product.parent.category</field>
        <field name="arch" type="xml">
            <form string="Product Category Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="product_category_type" widget="many2many_tags"/>
                        </group>
                    </group>
                     <notebook>
                        <page>
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Menu under Products/Configuration -->
    <menuitem id="menu_product_parent_category_root"
              name="Parent Category"
              parent="stock.menu_product_in_config_stock"
              sequence="21"
              action="action_product_main_category"/>
</odoo>
