<odoo>
    <record id="view_weekly_sales_report_wizard" model="ir.ui.view">
        <field name="name">weekly.sales.report.wizard.form</field>
        <field name="model">weekly.sales.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Weekly Sales Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_weekly_sales_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Weekly Sales Report</field>
        <field name="res_model">weekly.sales.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_weekly_sales_report_wizard"/>
        <field name="target">new</field>
    </record>

   <menuitem id="menu_report_weekly_sales" name="Weekly Sales Report"
		parent="sale.menu_sale_report" action="action_weekly_sales_report_wizard"
		 sequence="41" />

</odoo>
