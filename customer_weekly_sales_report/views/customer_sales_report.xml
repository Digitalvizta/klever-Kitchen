<odoo>
    <data>
        <record id="action_customer_sales_report" model="ir.actions.report">
            <field name="name">Weekly Customer Sales Summary Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">customer_weekly_sales_report.sales_report</field>
            <field name="report_file">customer_weekly_sales_report.sales_report</field>
        </record>
    </data>

    <template id="sales_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">Weekly Customer Sales Summary Report</h2>
                    <p>
                        <strong>From:</strong>
                        <t t-esc="data['start_date']"/>
                        <strong>To:</strong>
                        <t t-esc="data['end_date']"/>
                    </p>

                    <table class="table table-bordered" style="width: 100%;">
                        <thead>
                            <tr style="background-color: #f2f2f2; font-weight: bold; padding:5px;">
                                <th>
                                    <strong>Customer</strong>
                                </th>
                                <th>
                                    <strong>Product</strong>
                                </th>

                                <t t-foreach="weeks" t-as="week">
                                    <th>
                                        <strong>CW<t t-esc="week"/></strong>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="customers" t-as="customer">
                                <t t-set="first_row" t-value="True"/>
                                <t t-set="product_count" t-value="product_counts.get(customer, 1)"/>

                                <t t-foreach="customer_products.get(customer, [])" t-as="product">
                                    <tr>
                                        <!-- Customer Name (Only for first row, spans all product rows) -->
                                        <td t-if="first_row" t-att-rowspan="product_count">
                                            <strong>
                                                <t t-esc="customer"/>
                                            </strong>
                                        </td>
                                        <!-- Product Name -->
                                        <td>
                                            <t t-esc="product"/>
                                        </td>
                                        <!-- Weekly Quantities -->
                                        <t t-foreach="weeks" t-as="week">
                                            <td>
                                                <t t-set="qty"
                                                   t-value="weekly_sales.get(customer, {}).get(product, {}).get(week, 0.0)"/>
                                                <t t-esc="'{:04.1f}'.format(qty)"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-set="first_row" t-value="False"/>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
