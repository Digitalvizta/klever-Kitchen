<odoo>
  <template id="purchase_order_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 class="text-center">Weekly Product Wise Purchase Report</h2>
          <p>
            <strong>From:</strong>
            <!-- <t t-esc="data['start_date']"/> -->
            <strong>To:</strong>
            <!-- <t t-esc="data['end_date']"/> -->
          </p>

          <table class="table table-bordered" style="width: 100%; border: 1px solid black; border-collapse: collapse;">
            <thead>
              <tr style="background-color: #f2f2f2; font-weight: bold;">
                <th rowspan="2" style="border: 1px solid black; padding: 5px; white-space: nowrap;">Product</th>
                <t t-foreach="weeks" t-as="week">
                  <th colspan="3" style="border: 1px solid black; padding: 5px; text-align: center;">
                    CW<t t-esc="week"/>
                  </th>
                </t>
              </tr>
              <tr style="background-color: #f9f9f9; font-weight: normal;">
                <t t-foreach="weeks" t-as="week">
                  <th style="border: 1px solid black; padding: 5px; text-align: center;">Available</th>
                  <th style="border: 1px solid black; padding: 5px; text-align: center;">Consumed</th>
                  <th style="border: 1px solid black; padding: 5px; text-align: center;">Required</th>
                </t>
              </tr>
            </thead>

            <tbody>
              <t t-foreach="products" t-as="product">
                <tr>
                  <td style="border: 1px solid black; padding: 5px; font-weight: bold; white-space: nowrap;">
                    <t t-esc="product"/>
                  </td>
                  <t t-foreach="weeks" t-as="week">
                    <t t-set="stock" t-value="product_stock_status.get(product, {'available': 0.0, 'required': 0.0})"/>
                    <t t-set="consumed" t-value="weekly_sales.get((year, week), {}).get(product, 0.0)"/>
                    <td style="border: 1px solid black; padding: 5px; text-align: right;">
                      <t t-esc="'{:0.1f}'.format(stock.get('available', 0.0))"/>
                    </td>
                    <td style="border: 1px solid black; padding: 5px; text-align: right;">
                      <t t-esc="'{:0.1f}'.format(consumed)"/>
                    </td>
                    <td style="border: 1px solid black; padding: 5px; text-align: right;">
                      <t t-esc="'{:0.1f}'.format(stock.get('required', 0.0))"/>
                    </td>
                  </t>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
