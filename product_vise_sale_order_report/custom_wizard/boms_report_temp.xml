<odoo>
    <template id="boms_boms_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">Weekly Batch Output Wise Report</h2>
                    <p>
                        <strong>From:</strong>
                        <t t-esc="start_date"/>
                        <strong>To:</strong>
                        <t t-esc="end_date"/>
                    </p>

                    <table class="table table-bordered" style="border: 1px solid black; width: 100%; text-align: left;">
                        <thead>
                            <tr style="background-color: #f2f2f2; font-weight: bold; border: 1px solid black;">
                                <th style="border: 1px solid black; padding: 5px;">
                                    <strong>Product</strong>
                                </th>
                                <t t-foreach="weeks" t-as="week">
                                    <th style="border: 1px solid black; padding: 5px;">
                                        <strong>CW<t t-esc="week"/>(Batch Output)</strong>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="products" t-as="product">
                                <!-- Sales Quantity Row -->
<!--                                <tr style="border: 1px solid black;">-->
<!--                                    <td style="border: 1px solid black; font-weight: bold; padding: 5px;">-->
<!--                                        <t t-esc="product"/>-->
<!--                                    </td>-->
<!--                                    <t t-foreach="weeks" t-as="week">-->
<!--                                        <td style="border: 1px solid black; padding: 5px;">-->
<!--                                            <t t-set="qty"-->
<!--                                               t-value="weekly_sales.get((year, week), {}).get(product, 0.0)"/>-->
<!--                                            <t t-esc="'{:04.1f}'.format(qty)"/>-->
<!--                                        </td>-->
<!--                                    </t>-->
<!--                                </tr>-->

                                <!-- BOM Quantity Row -->
                                <tr style="border: 1px solid black; background-color: #f9f9f9;">
                                    <td style="border: 1px solid black; font-weight: bold; padding: 5px;">
                                        <t t-esc="product"/>
                                    </td>
                                    <t t-foreach="weeks" t-as="week">
                                        <td style="border: 1px solid black; padding: 5px;">
                                            <t t-set="bom_qty"
                                               t-value="weekly_boms.get((year, week), {}).get(product, 0.0)"/>
                                            <t t-esc="'{:04.1f}'.format(bom_qty)"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
