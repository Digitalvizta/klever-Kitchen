<odoo>
    <template id="batch_output_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">Production Batch Summary Report</h2>
                    <p>
                        <strong>From:</strong>
                        <t t-esc="data['start_date']"/>
                        <strong>To:</strong>
                        <t t-esc="data['end_date']"/>
                    </p>

                    <table class="table table-bordered" style="border: 1px solid black; width: 100%; text-align: left;">
                        <thead>
                            <tr style="background-color: #f2f2f2; font-weight: bold; border: 1px solid black;">
                                <th style="border: 1px solid black; padding: 5px;">Product</th>
                                <t t-foreach="weeks" t-as="week">
                                    <th style="border: 1px solid black; padding: 5px;">
                                        CW
                                        <t t-esc="week"/>
                                        (Batch Output)
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="products" t-as="product">
                                <tr style="border: 1px solid black;">
                                    <td style="border: 1px solid black; font-weight: bold; padding: 5px;">
                                        <t t-esc="product"/>
                                    </td>
                                    <t t-foreach="weeks" t-as="week">
                                        <t t-set="qty" t-value="weekly_boms.get((year, week), {}).get(product, 0.0)"/>
                                        <t t-set="qty_rounded" t-value="int(round(qty))"/>
                                        <td style="border: 1px solid black; padding: 5px;">
                                            <t t-esc="qty_rounded"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>