<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="bom_view_tree_id" model="ir.ui.view">
            <field name="name">Bom Tree</field>
            <field name="model">boms.boms</field>
            <field name="arch" type="xml">
                <list string="BOMs">
                    <field name="number"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="boms_view_form" model="ir.ui.view">
            <field name="name">boms.view.form</field>
            <field name="model">boms.boms</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                             <field name="number"/>
                        </h1>
                        <group>

                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="bom_line_ids">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="boms_action" model="ir.actions.act_window">
            <field name="name">Boms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">boms.boms</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="product_boms_id" name="Boms" parent="sale.menu_sale_config" action="boms_action" sequence="8"/>

    </data>
</odoo>