<odoo>
    <record id="batch_output_wizard_id" model="ir.ui.view">
        <field name="name">batch.report.form</field>
        <field name="model">batch.output</field>
        <field name="arch" type="xml">
            <form string="Generate Sale Order Report">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button string="Print" type="object" name="action_batch_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--    wizard action-->
    <record id="batch_output_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Batch Summary Report</field>
        <field name="res_model">batch.output</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- Ensure 'wizard_report' is the correct module where the view is defined -->
        <field name="view_id" ref="product_vise_sale_order_report.batch_output_wizard_id"/>
        <field name="binding_model_id" ref="model_batch_output"/>
        <field name="binding_view_types">form</field>
    </record>

    <!--    menu-->
    <menuitem id="ext_hr_employee_id"
              name="Production Batch Summary Report"
              parent="mrp.menu_mrp_reporting"
              action="batch_output_wizard_action"
    />
    <!--              parent="sale.menu_sale_report"-->

</odoo>
